// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Configure seed script
// Prisma uses package.json prisma.db.seed by default; alternatively via CLI scripts

model Requirement {
  id          String             @id @default(cuid())
  title       String
  description String?
  status      RequirementStatus  @default(DRAFT)
  requirementNumber String?       @unique
  owner       String?
  dueDate     DateTime?
  jiraKey     String?
  riskLevel   RequirementRisk    @default(MEDIUM)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  riskId      String?
  risk        Risk?              @relation(fields: [riskId], references: [id], onDelete: SetNull)
}

model Risk {
  id           String           @id @default(cuid())
  name         String
  summary      String?
  status       RiskStatus       @default(OPEN)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  requirements Requirement[]
}

enum RequirementStatus {
  DRAFT
  IN_REVIEW
  IN_PROGRESS
  TO_DO
  DONE
  APPROVED
  ARCHIVED
}

enum RequirementRisk {
  LOW
  MEDIUM
  HIGH
}

enum RiskStatus {
  OPEN
  SUBMITTED
  IN_PROGRESS
  TO_DO
  DONE
  APPROVED
  REJECTED
  ARCHIVED
}
