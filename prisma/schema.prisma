// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Configure seed script
// Prisma uses package.json prisma.db.seed by default; alternatively via CLI scripts

model Requirement {
  id          String             @id @default(cuid())
  title       String
  description String?
  status      RequirementStatus  @default(DRAFT)
  requirementNumber String?       @unique
  owner       String?
  dueDate     DateTime?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  dossierId   String?
  dossier     Dossier?           @relation(fields: [dossierId], references: [id], onDelete: SetNull)
}

model Dossier {
  id           String           @id @default(cuid())
  name         String
  summary      String?
  status       DossierStatus    @default(OPEN)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  requirements Requirement[]
}

enum RequirementStatus {
  DRAFT
  IN_REVIEW
  APPROVED
  ARCHIVED
}

enum DossierStatus {
  OPEN
  SUBMITTED
  APPROVED
  REJECTED
  ARCHIVED
}
